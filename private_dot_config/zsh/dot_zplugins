# Very cool plugin that generates zsh completion functions for commands
# if they have getopt-style help text. It doesn't generate them on the fly,
# you'll have to explicitly generate a completion, but it's still quite cool.
RobSis/zsh-completion-generator kind:defer

# k is a zsh script / plugin to make directory listings more readable,
# adding a bit of color and some git status information on files and
# directories.
supercrabtree/k kind:defer

# Warn you when you run a command that you've set an alias for without
# using the alias.
djui/alias-tips kind:defer

# Supercharge your history search with fzf
unixorn/fzf-zsh-plugin kind:defer

# Docker completion
srijanshetty/docker-zsh kind:defer

